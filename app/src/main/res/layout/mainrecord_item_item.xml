<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/Ln_mainRecordItemItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mainrecordRvItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blackTransparent_50"
                android:textSize="@dimen/mainhistoryPageYearTextSize"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mainrecordRvItemCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blackTransparent_50"
                android:textSize="@dimen/mainhistoryPageYearTextSize"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>