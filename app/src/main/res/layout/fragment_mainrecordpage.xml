<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_mainhistorypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainhistorypageTopColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorAnimationMode="linear"
        app:tabIndicatorColor="@color/mainhistorypageItemColor"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/mainhistorypageTabIndicatorText">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HistoryPageFullTab" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HistoryPageMaintenanceOthers" />

    </com.google.android.material.tabs.TabLayout>

    <!--탭 레이아웃에 연결된 뷰페이저-->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_maintenanceOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_mainhistorypage" />
    <!--탭 레이아웃에 연결된 뷰페이저-->

</androidx.constraintlayout.widget.ConstraintLayout>